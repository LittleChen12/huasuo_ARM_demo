<UserControl x:Class="RobotControlLibrary.RobotFkShow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RobotControlLibrary"
             d:DataContext="{d:DesignInstance Type=local:RobotFkShow}"
             mc:Ignorable="d"
             d:DesignHeight="50"
             d:DesignWidth="300">
    <Viewbox>
        <Grid>
            <Label Content="X"
                   Height="25"
                   FontSize="7"
                   Margin="-67,-2,67,2" />
            <Label Content="{Binding position.X}"
                   Height="25"
                   FontSize="10"
                   Margin="-53,-5,52,5" />
            <Label Content="Y"
                   Height="25"
                   FontSize="7"
                   Margin="-22,-2,22,2" />
            <Label Content="{Binding position.Y,Mode=TwoWay}"
                   Height="25"
                   FontSize="10"
                   Margin="-8,-5,7,5" />

            <Label Content="Z"
                   Height="25"
                   FontSize="7"
                   Margin="29,-3,-29,3" />
            <Label Content="{Binding position.Z}"
                   Height="25"
                   FontSize="10"
                   Margin="41,-5,-42,5" />
            <Label Content="alpha"
                   Height="25"
                   FontSize="5"
                   Margin="-70,12,70,-12" />
            <Label Content="{Binding position.RX}"
                   Height="25"
                   FontSize="10"
                   Margin="-53,9,52,-9" />
            <Label Content="beta"
                   Height="25"
                   FontSize="5"
                   Margin="-25,11,25,-11" />
            <Label Content="{Binding position.RY}"
                   Height="25"
                   FontSize="10"
                   Margin="-8,7,7,-7" />
            <Label Content="gama"
                   Height="25"
                   FontSize="5"
                   Margin="25,11,-25,-11" />
            <Label Content="{Binding position.RZ}"
                   Height="25"
                   FontSize="10"
                   Margin="41,6,-42,-6" />
        </Grid>
    </Viewbox>
</UserControl>
