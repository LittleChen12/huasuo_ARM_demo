<Window x:Class="RobotWindow.MainWindow"
        xmlns:helix="http://helix-toolkit.org/wpf"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RobotWindow"
        d:DataContext="{d:DesignInstance Type=local:MainWindow}"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="700"
        Width="1400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Menu Grid.Column="0"
                  FontSize="20">
                <MenuItem  x:Name="Files"
                           Header="文件">
                </MenuItem>
            </Menu>
        </Grid>
        
        
        <Grid Margin="0,1,0,-1"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <GroupBox Grid.Row="0"
                          Header="显示">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0"
                               Grid.Column="0"
                               Content="X(mm)"
                               HorizontalAlignment="Left" />
                        <Label x:Name="x"
                               Grid.Row="0"
                               Grid.Column="1"
                               Content="0.00"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center" />
                        <Label Grid.Row="0"
                               Grid.Column="2"
                               Content="Y(mm)"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left" />
                        <Label x:Name="y"
                               Grid.Row="0"
                               Grid.Column="3"
                               Content="0.00"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Right" />
                        <Label Grid.Row="0"
                               Grid.Column="4"
                               Content="Z(mm)"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left" />
                        <Label x:Name="z"
                               Grid.Row="0"
                               Grid.Column="5"
                               Content="0.00"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Right" />
                        <Label Grid.Row="1"
                               Grid.Column="0"
                               Content="Rx(rad)"
                               HorizontalAlignment="Right" />
                        <Label x:Name="A"
                               Grid.Row="1"
                               Grid.Column="1"
                               Content="0.00"
                               HorizontalAlignment="Left" />
                        <Label Grid.Row="1"
                               Grid.Column="2"
                               Content="Ry(rad)"
                               HorizontalAlignment="Right" />
                        <Label x:Name="B"
                               Grid.Row="1"
                               Grid.Column="3"
                               Content="0.00"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Left" />
                        <Label Grid.Row="1"
                               Grid.Column="4"
                               Content="Rz(rad)"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Right" />
                        <Label x:Name="c"
                               Grid.Row="1"
                               Grid.Column="5"
                               Content="0.00"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Left" />
                        <Label Grid.Row="2"
                               Grid.Column="0"
                               Content="J1(°)"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Right" />
                        <Label 
                               Grid.Row="2"
                               Grid.Column="1"
                               Content="0.00"
                               HorizontalAlignment="Left" />
                        <Label Grid.Row="2"
                               Grid.Column="2"
                               Content="J2(°)"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Right" />
                        <Label Grid.Row="2"
                               Grid.Column="3"
                               Content="0.00"
                               HorizontalAlignment="Left" />
                        <Label Grid.Row="2"
                               Grid.Column="4"
                               Content="J3(°)"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Right" />
                        <Label Grid.Row="2"
                               Grid.Column="5"
                               Content="0.00"
                               HorizontalAlignment="Left" />
                        <Label Grid.Row="3"
                               Grid.Column="0"
                               Content="J4(°)"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Right" />
                        <Label Grid.Row="3"
                               Grid.Column="1"
                               Content="0.00"
                               HorizontalAlignment="Left" />
                        <Label Grid.Row="3"
                               Grid.Column="2"
                               Content="J5(°)"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Right" />
                        <Label Grid.Row="3"
                               Grid.Column="3"
                               Content="0.00"
                               HorizontalAlignment="Left" />
                        <Label Grid.Row="3"
                               Grid.Column="4"
                               Content="J6(°)"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Right" />
                        <Label Grid.Row="3"
                               Grid.Column="5"
                               Content="0.00"
                               HorizontalAlignment="Left" />
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Row="1"
                          Header="手动控制">
                    <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <ComboBox Grid.Row="0"
                                  ItemsSource="{Binding Frames}" />
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</Window>
